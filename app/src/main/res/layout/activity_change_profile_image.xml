<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".changeProfileImage">

  <TextView
      android:id="@+id/setUserPhotoTItle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="48dp"
      android:layout_marginTop="80dp"
      android:text="Upload a photo of yourself:"
      android:textColor="@color/black"
      android:textSize="20dp"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/userUploadedPhoto"
      android:layout_width="228dp"
      android:layout_height="330dp"
      android:layout_marginStart="80dp"
      android:layout_marginTop="21dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/setUserPhotoTItle"
      app:srcCompat="@drawable/sample_image" />

  <Button
      android:id="@+id/uploadPhotoButton"
      android:layout_width="107dp"
      android:layout_height="53dp"
      android:layout_marginStart="152dp"
      android:layout_marginTop="28dp"
      android:text="Upload Photo"
      app:backgroundTint="@color/black"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/userUploadedPhoto" />

  <Button
      android:id="@+id/updatePhotoPageButton"
      android:layout_width="109dp"
      android:layout_height="56dp"
      android:layout_marginStart="148dp"
      android:layout_marginTop="108dp"
      android:text="Update"
      app:backgroundTint="@color/black"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/userUploadedPhoto" />

</androidx.constraintlayout.widget.ConstraintLayout>
